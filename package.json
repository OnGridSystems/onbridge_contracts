{
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/test-helpers": "^0.5.11",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.6.7",
    "hardhat-deploy": "^0.9.4",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat deploy --network localhost",
    "deploy:rinkeby": "hardhat deploy --network rinkeby",
    "deploy:kovan": "hardhat deploy --network kovan",
    "deploy:mumbai": "hardhat deploy --network mumbai",
    "deploy:bsc_testnet": "hardhat deploy --network bsc_testnet",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "verify:rinkeby": "hardhat etherscan-verify --network rinkeby --api-key $ETHERSCAN_API_KEY",
    "verify:kovan": "hardhat etherscan-verify --network kovan --api-key $ETHERSCAN_API_KEY",
    "verify:mumbai": "hardhat etherscan-verify --network mumbai --api-key $POLYGON_API_KEY",
    "verify:bsc_testnet": "hardhat etherscan-verify --network bsc_testnet --api-key $BSC_API_KEY",
    "verify:mainnet": "hardhat etherscan-verify --network mainnet --api-key $ETHERSCAN_API_KEY",
    "lint": "echo \"\ncheck js files \n\"; npx prettier --check \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx}\"; echo \"\ncheck sol files \n\"; npx prettier --check \"contracts/*.sol\"",
    "lint:js": "npx prettier --check \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx}\"",
    "lint:js:fix": "npx prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx}\"",
    "lint:sol": "npx prettier --check \"contracts/*.sol\"",
    "lint:sol:fix": "npx prettier --write \"contracts/*.sol\"",
    "prettier": "prettier -c 'contracts/**/*.sol'",
    "prettier:fix": "prettier --write 'contracts/**/*.sol'",
    "bridgeToL2:mumbai": "yarn hardhat --network bsc_testnet bridgeERC721TokenToPolygon",
    "bridgeToL2:kovan": "yarn hardhat --network bsc_testnet bridgeERC721TokenToEth",
    "bridgeToL1:bsc_testnet:from_mumbai": "yarn hardhat --network mumbai bridgeERC721TokenToBscFromPolygon",
    "bridgeToL1:bsc_testnet:from_kovan": "yarn hardhat --network kovan bridgeERC721TokenToBscFromKovan",
    "setContractAddressOnChainIdBsc:bsc_testnet": "yarn hardhat --network bsc_testnet setContractAddressOnChainIdBsc",
    "setContractAddressOnChainIdEth:kovan": "yarn hardhat ---network kovan setContractAddressOnChainIdEth",
    "setContractAddressOnChainIdPolygon:mumbai": "yarn hardhat --network mumbai setContractAddressOnChainIdPolygon",
    "addControllingAddressBsc:bsc_testnet": "yarn hardhat --network bsc_testnet addControllingAddressBsc",
    "addControllingAddressEth:kovan": "yarn hardhat --network kovan addControllingAddressEth",
    "addControllingAddressPolygon:mumbai": "yarn hardhat --network mumbai addControllingAddressPolygon",
    "grantMinterRoleToEthBridge:kovan": "yarn hardhat --network kovan grantMinterRoleToEthBridge",
    "grantMinterRoleToPolygonBridge:mumbai": "yarn hardhat --network mumbai grantMinterRoleToPolygonBridge"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@openzeppelin/hardhat-upgrades": "^1.13.0"
  }
}
